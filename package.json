{
  "name": "oa-coder",
  "version": "1.0.0",
  "description": "AI-powered coding assistant with screenshot analysis",
  "main": "dist/main/main.js",
  "scripts": {
    "start": "electron .",
    "build": "node compile-ts.js",
    "watch": "nodemon --watch src --ext ts,css,html --exec 'npm run build'",
    "dev": "concurrently \"npm run watch\" \"electron .\"",
    "lint": "eslint src --ext .ts,.js",
    "lint:fix": "eslint src --ext .ts,.js --fix",
    "build:all": "npm run build && electron-builder",
    "build:mac": "npm run build && electron-builder --mac",
    "build:win": "npm run build && electron-builder --win",
    "build:linux": "npm run build && electron-builder --linux"
  },
  "keywords": [
    "electron",
    "AI",
    "coding",
    "screenshot",
    "analysis"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@google/generative-ai": "^0.24.0",
    "axios": "^1.8.4",
    "electron-store": "^8.1.0",
    "form-data": "^4.0.0",
    "fs-extra": "^11.2.0",
    "marked": "^9.1.6",
    "openai": "^4.0.0",
    "screenshot-desktop": "^1.15.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/marked": "^5.0.2",
    "@types/node": "^20.10.7",
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@typescript-eslint/parser": "^6.9.1",
    "concurrently": "^8.2.2",
    "copyfiles": "^2.4.1",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "eslint": "^8.56.0",
    "nodemon": "^3.1.9",
    "typescript": "^5.3.3"
  },
  "build": {
    "appId": "com.oa-coder.app",
    "productName": "OA Coder",
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Development"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "resources",
      "output": "release"
    }
  }
}
